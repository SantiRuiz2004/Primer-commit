#include <stdio.h>
#include <stdlib.h>

#define SALUDO "Hola mundo Eclipse!!"

int main(void)
{
	setbuf(stdout, NULL);
	int numero;
	printf(SALUDO); /* prints !!!Hello World!!! */
	float pi = 3.14;
	char c = 'a';


	printf("\n El numero pi es: %f y el char es: %c\n", pi,c);

	printf("Ingrese un numero");

	scanf("%d", &numero);

	return EXIT_SUCCESS;
}
